<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>
      <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">URL</label>
        <input
          required
          class="form-control mr-2 col"
          type="url"
          placeholder="Enter URL"
          name="fullUrl"
          id="fullUrl"
        />
        <label for="customSuffix" class="sr-only">Custom short URL</label>
        <input name="customSuffix" id="customSuffix" class="form-control mr-2" placeholder="Short (optional)" />
        <button type="submit" class="btn btn-success">Shorten</button>
      </form>
      
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>URL</th>
            <th>Short link</th>
            <th>Alias</th>
            <th>Clicks</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td><%= shortUrl.full %></td>
              <td><a href="/<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
              <td><a href="/<%= shortUrl.alias %>"><%= shortUrl.alias.join(", ") %></a></td>
              <td><%= shortUrl.clicks %></td>
              <td><%= new Date(shortUrl.createdAt).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <% if (shortUrls.length === 0) { %>
        <p>No URLs have been shortened yet.</p>
      <% } %>
    </div>
  </body>
</html>
